    if (debut) {
      const fin = Date.now();
      const duree = Math.floor((fin - debut) / 1000);
      const min = String(Math.floor(duree / 60)).padStart(2, '0');
      const sec = String(duree % 60).padStart(2, '0');
      document.getElementById("chrono").innerText = `â±ï¸ Temps total : ${min}m ${sec}s`;
