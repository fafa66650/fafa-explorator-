<!-- patrimoine6/fin.html -->
<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>🏁 Fin – Mission Run</title>
  <style>
    body { font-family: sans-serif; background: #ecfdf5; color: #065f46; text-align: center; padding: 60px 20px; }
    .container { background: #d1fae5; max-width: 700px; margin: auto; padding: 40px; border-radius: 20px; }
    h1 { font-size: 2em; color: #047857; }
    .badge { margin: 30px auto; padding: 15px; background: #10b981; border-radius: 12px; display: inline-block; font-size: 1.2em; }
    #chrono { font-size: 1.3em; margin-top: 20px; }
    .btn { margin-top: 30px; padding: 12px 24px; font-size: 1em; background: #059669; color: white; border: none; border-radius: 8px; cursor: pointer; }
    .btn:hover { background: #047857; }
  </style>
</head>
<body>
  <div class="container">
    <h1>🏁 Félicitations coureur !</h1>
    <p>Tu as franchi toutes les étapes de Mission Run.</p>
    <div class="badge">🏅 Badge : Coureur FAFA™</div>
    <p id="chrono">⏱️ Temps total : ...</p>
    <button class="btn" onclick="location.href='../../index.html'">🏠 Retour HQ</button>
  </div>
  <script>
    const debut = localStorage.getItem("start");
    if (debut) {
      const fin = Date.now();
      const duree = Math.floor((fin - debut) / 1000);
      const min = String(Math.floor(duree / 60)).padStart(2, '0');
      const sec = String(duree % 60).padStart(2, '0');
      document.getElementById("chrono").innerText = `⏱️ Temps total : ${min}m ${sec}s`;
      localStorage.removeItem("start");
    }
  </script>
</body>
</html>
