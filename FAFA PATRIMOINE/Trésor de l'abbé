  <input id="rep"><button onclick="valider()">Valider</button>
  <script>
    if (!localStorage.getItem("start")) localStorage.setItem("start", Date.now());
    function valider() {
      if (document.getElementById('rep').value.toLowerCase() === 'foi')
        location.href = 'fin.html';
      else alert("Cherche un mot très présent dans les lieux de culte.");
    }
  </script>
