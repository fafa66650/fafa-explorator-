  <script>
    const ok = ['amour', 'foi', 'espoir'];
    function valider() {
      if (ok.includes(document.getElementById('rep').value.toLowerCase()))
        location.href = 'enigme10.html';
      else alert("Mot trop rare. Essaie un autre.");
    }
  </script>
